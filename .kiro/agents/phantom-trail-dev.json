{
  "name": "phantom-trail-dev",
  "description": "Development agent for Phantom Trail Chrome extension with lint/format hooks",
  "tools": ["fs_write", "fs_read", "execute_bash"],
  "hooks": {
    "postToolUse": [
      {
        "matcher": "fs_write",
        "command": "powershell.exe -ExecutionPolicy Bypass -File .kiro/hooks/lint-format.ps1",
        "timeout_ms": 30000
      }
    ]
  }
}
