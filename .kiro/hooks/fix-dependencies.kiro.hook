{
  "enabled": true,
  "name": "Fix Dependencies After Agent Work",
  "description": "Automatically reinstall dependencies and fix linting issues when agent execution completes",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "pnpm install"
  }
}